{
  "name": "Orbix Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.10-node",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  "postCreateCommand": "npm install && pip install flask gunicorn",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "github.copilot",
        "ms-python.python",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Node Server",
      "onAutoForward": "openPreview"
    },
    "5000": {
      "label": "Flask Server",
      "onAutoForward": "openPreview"
    }
  }
}
